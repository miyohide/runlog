<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="uk-table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', course, class: 'uk-button uk-button-default' %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: 'uk-button uk-button-default' %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-button uk-button-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'uk-button uk-button-primary' %>
