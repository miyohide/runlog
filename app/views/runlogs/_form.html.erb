<%= form_with(model: runlog, local: true) do |form| %>
  <% if runlog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(runlog.errors.count, "error") %> prohibited this runlog from being saved:</h2>

      <ul>
        <% runlog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :run_date %>
    <%= form.datetime_select :run_date %>
  </div>

  <div class="field">
    <%= form.label :distance %>
    <%= form.text_field :distance %>
  </div>

  <div class="field">
    <%= form.label :total_time_hours %>
    <%= form.text_field :total_time_hours, value: total_time_hours_value(form.object.total_time) %>
  </div>

  <div class="field">
    <%= form.label :total_time_minutes %>
    <%= form.text_field :total_time_minutes, value: total_time_minutes_value(form.object.total_time) %>
  </div>

  <div class="field">
    <%= form.label :total_time_seconds %>
    <%= form.text_field :total_time_seconds, value: total_time_seconds_value(form.object.total_time) %>
  </div>

  <div class="field">
    <%= form.collection_select :shoe_id, @shoes, :id, :name %>
  </div>

  <div class="field">
    <%= form.collection_select :course_id, @courses, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
