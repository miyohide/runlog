<p id="notice"><%= notice %></p>

<h1>Runlogs</h1>

<table class="uk-table">
  <thead>
    <tr>
      <th>Run date</th>
      <th>Distance</th>
      <th>Total time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runlogs.each do |runlog| %>
      <tr>
        <td><%= runlog.run_date %></td>
        <td><%= runlog.distance %></td>
        <td><%= Time.at(runlog.total_time).utc.strftime('%X') %></td>
        <td><%= link_to 'Show', runlog, class: 'uk-button uk-button-default' %></td>
        <td><%= link_to 'Edit', edit_runlog_path(runlog), class: 'uk-button uk-button-default' %></td>
        <td><%= link_to 'Destroy', runlog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-button uk-button-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Runlog', new_runlog_path, class: 'uk-button uk-button-primary' %>
