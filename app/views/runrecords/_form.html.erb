<%= form_with(model: runrecord) do |form| %>
  <% if runrecord.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(runrecord.errors.count, "error") %> prohibited this runrecord from being saved:</h2>

      <ul>
        <% runrecord.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row mb-3">
    <%= form.label :starttime, class: 'col-sm-2 form-label' %>
    <%= form.datetime_select :starttime, {}, class: 'form-select', style: 'display: inline-block;width: auto;' %>
  </div>

  <div class="field row mb-3">
    <%= form.label :distance, class: 'col-sm-2 form-label' %>
    <div class="col-sm-5">
      <%= form.text_field :distance, class: 'form-control' %>
    </div>
  </div>

  <div class="field row mb-3">
    <%= form.label :runtime, class: 'col-sm-2 form-label' %>
    <div class="col-sm-5">
      <%= form.number_field :runtime, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
