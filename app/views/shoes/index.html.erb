<p id="notice"><%= notice %></p>

<h1>Shoes</h1>

<table class="uk-table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.name %></td>
        <td><%= link_to 'Show', shoe, class: 'uk-button uk-button-default' %></td>
        <td><%= link_to 'Edit', edit_shoe_path(shoe), class: 'uk-button uk-button-default' %></td>
        <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-button uk-button-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shoe', new_shoe_path, class: 'uk-button uk-button-primary' %>
